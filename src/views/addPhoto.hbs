{{#if tokenIsPresent}}
    <div  id="addPhotoContent">
        <form id="formElem" action="/addPhoto" method="POST" enctype="multipart/form-data">
            <div class="addForm">
                <h1>Добавить фото</h1>
                <div class="form-group">
                    <input name="attraction"  placeholder="название достопримечательности" class="form-control"/>
                </div>
                <div class="form-group">
                    <input name="countries"  placeholder="название страны" class="form-control"/>
                </div>
                <div class="form-group">
                    <input name="city"  placeholder="название города" class="form-control"/>
                </div>
                <div class="form-group">
                    <input type="text" class="form-control" name="data" oninput="this.value = this.value.replace(/[^\d.]/g, '')" pattern="\d{2}.\d{2}.\d{4}" placeholder="Добавьте дату фотографии в формате 01.02.2016" autocomplete="bday" required>
                </div>
                <div class="form-group">
                  <input type="file" name="image[]" class="form-control" multiple />
                </div>
                <div class="addFile"></div>

                <div class="form-group">
                    <input type="submit" class="btn btn-outline-success form-control" id="btnFormAdd"/>
                </div>
            </div>
        </form>
    </div>
    <script src="https://code.jquery.com/jquery-3.6.4.min.js"></script>

{{else}}
    HTML для неавторизованного пользователя
{{/if}}


